{
  "permissions": {
    "allow": [
      "Bash",
      "Skill(cfg)",
      "mcp__context7__*"
    ],
    "ask": [
      "Bash(git push:*)",
      "Bash(git publish:*)",
      "Bash(rm:*)"
    ],
    "defaultMode": "plan"
  },
  "model": "opus",
  "hooks": {
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.message // empty' | say -v 'Jamie (Premium)' -r 250"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "[ -f package.json ] && grep -q '\"format\"' package.json && { [ -f bun.lock ] || [ -f bun.lockb ] && bun run format || [ -f yarn.lock ] && yarn run format || [ -f pnpm-lock.yaml ] && pnpm run format || [ -f package-lock.json ] && npm run format; } || true"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bash -c '\"/Users/jan/.bun/bin/bun\" \"$(ls -td ~/.claude/plugins/cache/claude-hud/claude-hud/*/ 2>/dev/null | head -1)src/index.ts\"'"
  },
  "enabledPlugins": {
    "ralph-loop@claude-plugins-official": true,
    "feature-dev@claude-plugins-official": true,
    "code-simplifier@claude-plugins-official": true,
    "claude-hud@claude-hud": true,
    "commit-commands@claude-plugins-official": true,
    "document-skills@anthropic-agent-skills": true
  },
  "autoUpdatesChannel": "latest"
}
